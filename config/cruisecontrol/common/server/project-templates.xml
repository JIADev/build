<?xml version="1.0"?>
<cb:config-template xmlns:cb="urn:ccnet.config.builder">
  
  <!-- 7.3.x, 7.4.x, and 7.5.x build project -->
  
  <cb:define name="customerbuild">
    <cb:define project-root="$(driver)-$(branch)$(bookmark)$(tag)" />
    <cb:define db-name="ccnet-$(project-name)-DEV" />
    <cb:define feature="$(relativefeature)" />
    <cb:define db-server="$(db-server-2008)" />
    <cb:define db-user="$(db-user-2008)" />
    <cb:define db-password="$(db-password-2008)" />
    
    <project name="$(project-name)" category="$(driver)" queue="$(driver)$(queueSuffix)" queuePriority="$(queue-priority)">
      <cb:if expr="'$(sourceCheckInterval)'!=''">
	<triggers>
	  <intervalTrigger seconds = "$(sourceCheckInterval)" />
	</triggers>
      </cb:if>
      <workingDirectory>$(project-folder)</workingDirectory>
      <artifactDirectory>$(artifact-folder)</artifactDirectory>
      <cb:sourcecontrol />
      <prebuild>
	<cb:update-source />
	<cb:force-clean />
      </prebuild>
      <tasks>
	<cb:set-customer />
	<cb:junction-features />
	<cb:copy-logger-local />
	<cb:configure-db />
	<cb:build-feature-exe />
	<cb:create-settings />
	<cb:f-setup />
	<cb:f-install-patches />
	<cb:f-build />
	<cb:f-unit-tests />
	<cb:msbuild-package />
	<cb:publish-package />
	<cb:publish-privatebuild />
      </tasks>
      <publishers>
	<cb:standard-publishers />
      </publishers>
      <externalLinks>
	<externalLink name="root" url="$(ccwebroot)" />
      </externalLinks>
      <webURL>$(ccwebroot)server/$(ccBuildServer)/project/$(project-name)/ViewProjectReport.aspx</webURL>
    </project>
  </cb:define>
  
  <!-- 7.6.x build project -->
  
  <cb:define name="v76build">
    <cb:define project-root="$(driver)-$(branch)$(bookmark)$(tag)" />
    <cb:define db-name="ccnet-$(project-name)-DEV" />
    <cb:define feature="$(relativefeature)" />
    <cb:define db-server="$(db-server-2012)" />
    <cb:define db-user="$(db-user-2012)" />
    <cb:define db-password="$(db-password-2012)" />
    
    <project name="$(project-name)" category="$(driver)" queue="$(driver)$(queueSuffix)" queuePriority="$(queue-priority)">
      <cb:if expr="'$(sourceCheckInterval)'!=''">
	<triggers>
	  <intervalTrigger seconds = "$(sourceCheckInterval)" />
	</triggers>
      </cb:if>
      <workingDirectory>$(project-folder)</workingDirectory>
      <artifactDirectory>$(artifact-folder)</artifactDirectory>
      <cb:sourcecontrol />
      <prebuild>
	<cb:update-source />
	<cb:force-clean />
      </prebuild>
      <tasks>
	<cb:set-customer />
	<cb:copy-logger-local />
	<cb:msbuild-configure />
	<cb:msbuild-bootstrap />
	<cb:msbuild-setup />
	<cb:msbuild-install-patches />
	<cb:msbuild-build />
	<cb:setup-unittests />
	<cb:run-ncover-f-unittests />
	<cb:get-reports />
	<cb:msbuild-package />
	<cb:publish-package />
	<cb:publish-privatebuild />
      </tasks>
      <publishers>
	<merge>
	  <files>
	    <file>$(project-folder)\TestResult\*.xml</file>
	    <file>$(project-folder)\Coverage\SymbolModule.xml</file>
	    <file>$(project-folder)\TestResult\FxCop-results.xml</file>
	    <file action="Copy">$(project-folder)\NDepend\*</file>
	  </files>
	</merge>
	<cb:standard-publishers />
      </publishers>
      <externalLinks>
	<externalLink name="root" url="$(ccwebroot)" />
      </externalLinks>
      <webURL>$(ccwebroot)server/$(ccBuildServer)/project/$(project-name)/ViewProjectReport.aspx</webURL>
    </project>
  </cb:define>
  
  <cb:define name="reqBuild">
    <cb:v76build
	driver="CUST$(customer)"
	project-name="$(driver)-$(req-number)"
	branch = '$(customer)_$(req-number)'
	platform="AnyCpu"
	repo-name="master"
	package="false"
	j6Version="7.6.0"
	queueSuffix="-Track$(track)"
	unit-test="true"
	/>
  </cb:define>
  
  <cb:define name="v76deployment">
    <cb:define project-root="$(driver)-$(branch)$(bookmark)$(tag)" />
    <cb:define db-name="ccnet-$(project-name)-DEV" />
    <cb:define feature="$(relativefeature)" />
    
    <project name="$(project-name)" category="$(driver)" queue="$(driver)$(queueSuffix)" queuePriority="$(queue-priority)">
      <workingDirectory>$(project-folder)</workingDirectory>
      <artifactDirectory>$(artifact-folder)</artifactDirectory>
      <cb:if expr="'$(triggerTime)'!=''">
	<triggers>
	  <scheduleTrigger time = "$(triggerTime)" buildCondition="ForceBuild" />
	</triggers>
      </cb:if>
      <prebuild>
	<cb:force-clean-deployment-project />
      </prebuild>
      <tasks description="Deploy and test">
	<cb:msdeploy />
	<cb:run-webtests />
      </tasks>
      <publishers>
	<merge>
	  <files>
	    <file>$(pkgroot)\$(project-name)\*Results.xml</file>
	  </files>
	</merge>
	<xmllogger />
	<statistics />
      </publishers>
      <externalLinks>
	<externalLink name="root" url="$(ccwebroot)" />
      </externalLinks>
      <webURL>$(ccwebroot)server/$(ccBuildServer)/project/$(project-name)/ViewProjectReport.aspx</webURL>
    </project>
  </cb:define>
  
  <cb:define name="createTaggedBuild">
    <project name="$(project-name)" category="$(driver)" queue="$(driver)$(queueSuffix)" queuePriority="$(queue-priority)">
      <workingDirectory>$(project-folder)</workingDirectory>
      <artifactDirectory>$(artifact-folder)</artifactDirectory>
      <triggers>
	<cb:if expr="'$(triggerTime)'!=''">
	  <scheduleTrigger time = "$(triggerTime)" buildCondition="ForceBuild" />
	</cb:if>
      </triggers>
      <tasks>
	<cb:createbuild />
      </tasks>
      <publishers>
	<xmllogger />
	<statistics />
      </publishers>
      <externalLinks>
	<externalLink name="root" url="$(ccwebroot)" />
      </externalLinks>
      <webURL>$(ccwebroot)server/$(ccBuildServer)/project/$(project-name)/ViewProjectReport.aspx</webURL>
    </project>
  </cb:define>
  
  <cb:define name="mergeBuild">
    <project name="$(project-name)" category="$(driver)" queue="$(driver)$(queueSuffix)" queuePriority="$(queue-priority)">
      <workingDirectory>$(project-folder)</workingDirectory>
      <artifactDirectory>$(artifact-folder)</artifactDirectory>
      <triggers>
	<cb:if expr="'$(triggerTime)'!=''">
	  <scheduleTrigger time = "$(triggerTime)" buildCondition="ForceBuild" />
	</cb:if>
	<cb:if expr="'$(triggerTime2)'!=''">
	  <scheduleTrigger time = "$(triggerTime2)" buildCondition="ForceBuild" />
	</cb:if>
      </triggers>
      <tasks>
    	<msbuild logger="$(msBuildListenerDll)" description="Forward Merge 2094" executable="$(msbuild)" projectFile="$(global_feature_dir)\buildtools.proj" targets="ForwardMerge_2094" workingDirectory="$(project-folder)" />
      </tasks>
      <publishers>
	<xmllogger />
	<statistics />
      </publishers>
      <externalLinks>
	<externalLink name="root" url="$(ccwebroot)" />
      </externalLinks>
      <webURL>$(ccwebroot)server/$(ccBuildServer)/project/$(project-name)/ViewProjectReport.aspx</webURL>
    </project>
    
  </cb:define>
</cb:config-template>
