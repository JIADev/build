<?xml version="1.0"?>
<cb:config-template xmlns:cb="urn:ccnet.config.builder">
  
  <!-- Note that in newer versions of ccnet, ccnet will create the feature folders. No need to create by hand. -->
  
  <cb:include href="tracks.xml" xmlns:cb="urn:ccnet.config.builder" />
<!--
 <cb:v76Test
      project-name="CUST2094-RM47968"
      branch = '2094_RM47968'
      driver = 'CUST2094'
      platform="AnyCpu"
      repo-name="master"
	  package="true"
	  prodTag="7.6.1"
      external-protect="true"
      external-zip="true"
      j6Version="7.6.1"
	  unit-test="false"
	  jslint="true"
	  
      />
-->
  <!-- req branches -->
  <cb:build4queues />

  <project name="hg-$(ccBuildServer)" category="ccnet" queue="mercurial">
    <triggers>
      <intervalTrigger seconds="60" />
    </triggers>
    <sourcecontrol 
	type="hg" 
	workingDirectory="$(srcroot)/master"
	repo="$(repo-source-root)/customers/master"
	autoGetSource="false" 
	timeout="12000000"
	multipleHeadsFail="false"
	tagOnSuccess="false"
	commitModifications="false"
	commitUntracked="false"
	purgeModifications="true"
	revertModifications="true"
	committerName="CruiseControl.NET"
	>
    </sourcecontrol>
    <tasks>
      <exec executable="$(cmdExe)"
	    description="Update $(global_feature_dir)"
	    buildArgs="/c  hg pull -u"
	    baseDirectory="$(global_feature_dir)" />
    </tasks>
  </project>
  

</cb:config-template>
