<!doctype HTML>
<html>

<hta:application
	id="TestHTA"
	applicationname="UiUxToolsRenameCss"
	scroll="no"
	singleinstance="yes"
	sysmenu="yes"
	minimizebutton="yes"
	maximizebutton="no"
	windowstate="normal"
	navigable="yes" />

<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<script src="../Script/includes.js"></script>
	<script src="../Script/database_control.js"></script>

	<title>UiUx Database Tools</title>


	<script>
		function init() {
			loadFormFromPrefs(document.getElementById("database_test"));
			createTestOptions();
		}
	</script>
</head>
<body onload="init()">

	<div id="mainbody" style="">

		<form id="database_test" action="#" onsubmit="return false">
			<fieldset>
				<legend>Required:</legend>
				<div>
					<label for="select-server">Select the server:</label>
					<select id="select-server" name="select-server">
						<option>dev-sql1</option>
						<option>dev-sql2</option>
						<option>localhost</option>
					</select>
				</div>
				<div>
					<label for="input-db">Select database:</label>
					<input id="input-db" name="input-db" />
				</div>
			</fieldset>
			<fieldset>
				<legend>Not usually required</legend>
				<div>
					<label for="input-username">Username:</label>
					<input id="input-username" name="input-username" autocorrect="off" autocapitalize="off" />
				</div>
				<div>
					<label for="input-password">Password:</label>
					<input id="input-password" type="password" name="input-password" autocorrect="off" autocapitalize="off" autocomplete="off" />
				</div>

			</fieldset>
		</form>

		<div id="part0" class="hidden">
			<p>Working: Please wait.</p>
		</div>


		<div id="part1" class="hidden">
		</div>

		<div id="part2" class="hidden">
			<div id="txtTables"></div>
		</div>


		<div id="part3" class="hidden">

			<div id="errBox"></div>

			<div id="txtData">
			</div>


		</div>
</body>
</html>

